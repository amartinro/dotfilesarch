arrancarserver() {
  sudo systemctl stop httpd
  sudo systemctl start httpd
  sudo systemctl stop mariadb.service
  sudo systemctl start mariadb.service
}

addkeygitpersonal() {
  cd /home/amartin/.ssh/keys/githubpersonal
  eval "$(ssh-agent -s)"
  ssh-add amartinro
}

pararserver() {
  sudo systemctl stop httpd
  sudo systemctl stop mariadb.service
}

